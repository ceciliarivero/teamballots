<h2>User Login</h2>

<form action="/login" method="POST">
  <input type="text" name="user[email]" placeholder="Username or E-mail" value="{{ this.h(user) }}"><br>

  <input type="password" name="user[password]" placeholder="Password"><br>

  <label for="remember">
    <input id="remember" type="checkbox" name="user[remember]" value="1"> Remember me
  </label><br><br>

  <a href="/forgot-password">Forgot password?</a><br><br>

  <button type="submit">Login</button>
</form>
