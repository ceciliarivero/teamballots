% ballot_status = Status.new(ballot).status

% if ballot_status != "Closed"
  {{ this.partial("ballot/add_comment", ballot: ballot, comment: NewComment.new({})) }}
% end

% if ballot.comments.size > 0
  <ul>

    % comments = ballot.comments.sort_by(:date, order: "ALPHA DESC")

    % comments.each do |comment|
    <hr>
    <li>By: {{ comment.added_by }} | Date: {{ comment.commented_at }}<br><br>
      {{ comment.message }}</li><br>

    % end

  </ul>
% else
    No comments yet.
% end
