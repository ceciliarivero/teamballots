<section>
  <h2>Ballot: {{ ballot.title }}</h2>

  <h2>Voters</h2>

  {{ this.partial("ballot/voters_list", ballot: ballot) }}

  % if ballot.status? == "active"
    <a href="/ballot/{{ ballot.id }}/voters/add">Add voter</a><br>
  % end

  <br>
  <a href="/ballot/{{ ballot.id }}">Back to ballot</a>
</section>
