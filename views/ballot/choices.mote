<section>
  <h2>Ballot: {{ ballot.title }}</h2>

  <h2>Choices</h2>

  {{ this.partial("ballot/choices_list", ballot: ballot) }}

  % ballot_status = Status.new(ballot).status

  % if ballot_status == "Active"
    <br><br>
    <a class="btn" href="/ballot/{{ ballot.id }}/choices/add">Add choice</a><br>
  % end

  <br>
  <a href="/ballot/{{ ballot.id }}">Back to ballot</a>
</section>
