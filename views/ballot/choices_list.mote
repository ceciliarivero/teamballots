% choices = ballot.choices
% ballot_status = Status.new(ballot).status

% if !choices.empty?
  <thead>
    <tr>
      <th>Title</th><th>Added by</th><th>Date</th>
      % if ballot_status == "Active"
        <th>Remove</th>
      % end
    </tr>
  </thead>

  % choices.each do |choice|
    <tr>
      <td>
        {{ choice.title }}
      </td>
      <td>
        {{ choice.added_by }}
      </td>
      <td>
        {{ choice.added_at }}
      </td>
      % if ballot_status == "Active"
        <td><a href="/ballot/{{ ballot.id }}/choices/{{ choice.id }}/remove"><i class="fa fa-trash-o"></i></a>
        </td>
      % end
    </tr>
  % end
% else
    <tr>
      <td>No choices added.</td>
    </tr>
% end
